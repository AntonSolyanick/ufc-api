{
    "version": 3,
    "build": {
        "env": {
            "NODE_ENV": "production"
        }
    },
    "functions": {
        "server.ts": {
            "runtime": "nodejs18.x",
            "memory": 1024,
            "maxDuration": 30,
            "includeFiles": [
                "src/**/*.ts",
                "models/**/*.ts",
                "routes/**/*.ts",
                "config/**/*.ts",
                "package.json",
                "tsconfig.json",
                ".env.local"
            ]
        }
    },
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server.ts",
            "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
        },
        {
            "src": "/(.*)",
            "dest": "/server.ts"
        }
    ],
    "regions": ["fra1"],
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/server.ts"
        }
    ]
}
