{
    "version": 3,
    "build": {
        "env": {
            "NODE_ENV": "production"
        }
    },
    "functions": {
        "server.ts": {
            "runtime": "nodejs18.x",
            "memory": 1024,
            "maxDuration": 30
        }
    },
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server.ts",
            "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
        },
        {
            "src": "/(.*)",
            "dest": "/server.ts"
        }
    ],
    "regions": ["fra1"]
}
